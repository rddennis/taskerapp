<%= simple_form_for(@user_task, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :due_date, as: :string, placeholder: '2017-07-07' %>
  </div>

  <div class="form-actions" id="submit-button">
    <%= f.submit 'Add New Task', class: "btn btn-info btn-large" %>
  </div>
<% end %>
